{{ 'section-tabs.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tabs .title-wrapper {
    text-align: {{ section.settings.heading_alignment }};
  }
  
  {% for block in section.blocks %}
    .tab__switcher#{{ block.id }}:checked ~  .tabs__content_wrapper .tabs__content#{{ block.id }} {
        opacity: 1;
        visibility: visible;
        position: relative;
    }   

    .tab__switcher#{{ block.id }}:checked ~ .tab__heading_wrapper #{{ block.id }}::after {
      opacity: 1;
      visibility: visible;
    }

    .tab__switcher#{{ block.id }}:checked ~ .tab__heading_wrapper #{{ block.id }} {
      background-color: transparent;
      opacity: 1;
    }
  {% endfor %}
{%- endstyle -%}

<div class="tabs color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin">
        {% unless section.settings.heading_element_custom %}
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {% else %}
          {%
            render 'headings',
            heading_size: section.settings.heading_element,
            heading_element: section.settings.heading_element,
            title: section.settings.heading,
            class: 'title inline-richtext',
          %}
        {% endunless %}
      </div>
    {%- endunless -%}
    <div class="tabs-wrapper">
      {% for block in section.blocks %}
          <input type="radio" 
            name="tabset__{{ section.id }}" 
            id="{{ block.id }}" 
            aria-controls="{{ block.id }}" 
            class="tab__switcher"
            {% if forloop.index == 1 %}
              checked
            {% endif %}
          >
      {% endfor %}
      <div class="tab__heading_wrapper">
        {% for block in section.blocks %}
          <label class="tab__heading"
            for="{{ block.id }}"
            id="{{ block.id }}"
            aria-controls="{{ block.id }}" 
          >
            {% render 'icon-accordion', icon: block.settings.icon %}
            {% unless block.settings.heading_element_custom %}
              <h4 class="title inline-richtext {{ block.settings.heading_size }}">
                {{ block.settings.title }}
              </h4>
            {% else %}
              {%
                render 'headings',
                heading_size: block.settings.heading_size,
                heading_element: block.settings.heading_element,
                title: block.settings.title,
                class: 'title inline-richtext',
              %}
            {% endunless %}
          </label>
        {% endfor %}
      </div>
      <div class="tabs__content_wrapper">
        {% for block in section.blocks %}
          <div class="tabs__content"
            id="{{ block.id }}"
          >
            {{ block.settings.row_content }}
            {{ block.settings.page.content }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

