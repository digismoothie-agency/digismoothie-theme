{{ 'section-tabs.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tabs .title-wrapper {
    text-align: {{ section.settings.heading_alignment }};
  }

  .tab__heading_wrapper {
    justify-content: {{ section.settings.tabs_alignment }};
  }
  
  {% for block in section.blocks %}
    .tab__switcher#{{ block.id }}:checked ~  .tabs__content_wrapper .tabs__content#{{ block.id }} {
        opacity: 1;
        visibility: visible;
        position: relative;
    }   

    .tab__switcher#{{ block.id }}:checked ~ .tab__heading_wrapper #{{ block.id }}::after {
      opacity: 1;
      visibility: visible;
    }

    .tab__switcher#{{ block.id }}:checked ~ .tab__heading_wrapper #{{ block.id }} {
      background-color: transparent;
      opacity: 1;
    }
  {% endfor %}
{%- endstyle -%}


<div class="tabs color-{{ section.settings.color_scheme }} gradient">
  <div class="tabs-{{ section.settings.layout }}-layout isolate{% if section.settings.layout == 'section' %} page-width{% elsif section.settings.layout == 'none' %} content-container content-container--full-width{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin">
        {% unless section.settings.heading_element_custom %}
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {% else %}
          {%
            render 'headings',
            heading_size: section.settings.heading_element,
            heading_element: section.settings.heading_element,
            title: section.settings.heading,
            class: 'title inline-richtext',
          %}
        {% endunless %}
      </div>
    {%- endunless -%}
    <div class="tabs-wrapper">
      {% for block in section.blocks %}
          <input type="radio" 
            name="tabset__{{ section.id }}" 
            id="{{ block.id }}" 
            aria-controls="{{ block.id }}" 
            class="tab__switcher"
            {% if forloop.index == 1 %}
              checked
            {% endif %}
          >
      {% endfor %}
      <div class="tab__heading_wrapper">
        {% for block in section.blocks %}
          <label class="tab__heading"
            for="{{ block.id }}"
            id="{{ block.id }}"
            aria-controls="{{ block.id }}" 
          >
            {% render 'icon-accordion', icon: block.settings.icon %}
            {% unless block.settings.heading_element_custom %}
              <h4 class="title inline-richtext {{ block.settings.heading_size }}">
                {{ block.settings.title }}
              </h4>
            {% else %}
              {%
                render 'headings',
                heading_size: block.settings.heading_size,
                heading_element: block.settings.heading_element,
                title: block.settings.title,
                class: 'title inline-richtext',
              %}
            {% endunless %}
          </label>
        {% endfor %}
      </div>
      <div class="tabs__content_wrapper">
        {% for block in section.blocks %}

          {% liquid 
            assign products_to_display = block.settings.collection.all_products_count

            assign show_desktop_slider = false
            if section.settings.enable_desktop_slider and products_to_display > block.settings.products_to_show
              assign show_desktop_slider = true
            endif

            assign show_mobile_slider = false
            if section.settings.swipe_on_mobile and products_to_display > block.settings.products_to_show
              assign show_mobile_slider = true
            endif
          %}
          <div class="tabs__content{% if block.settings.collection.products != blank %} collection__content{% endif %}"
            id="{{ block.id }}"
          >
            {{ block.settings.row_content }}
            {{ block.settings.page.content }}
            {% if block.settings.collection.products != blank %}  
              <slider-component class="slider-mobile-gutter slider-component-full-width{% if show_desktop_slider %} slider-component-desktop{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                <ul
                  id="Slider-{{ block.id }}"
                  class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop{% if section.settings.collection == blank %} grid--2-col-tablet-down{% else %} grid--{{ section.settings.columns_mobile }}-col-tablet-down{% endif %}{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
                  role="list"
                  aria-label="{{ 'general.slider.name' | t }}"
                >
                  {%- for product in block.settings.collection.products limit: block.settings.products_to_show -%}
                    <li
                      id="Slide-{{ block.id }}-{{ forloop.index }}"
                      class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: block.settings.image_ratio,
                        image_shape: block.settings.image_shape,
                        show_secondary_image: block.settings.show_secondary_image,
                        show_vendor: block.settings.show_vendor,
                        show_rating: block.settings.show_rating,
                        show_quick_add: block.settings.enable_quick_add,
                        section_id: block.id
                      %}
                    </li>
                  {%- endfor -%}
                </ul>
                {%- if show_mobile_slider or show_desktop_slider -%}
                  <div class="slider-buttons no-js-hidden">
                    <button
                      type="button"
                      class="slider-button slider-button--prev"
                      name="previous"
                      aria-label="{{ 'general.slider.previous_slide' | t }}"
                      aria-controls="Slider-{{ block.id }}"
                    >
                      {% render 'icon-caret' %}
                    </button>
                    <div class="slider-counter caption">
                      <span class="slider-counter--current">1</span>
                      <span aria-hidden="true"> / </span>
                      <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                      <span class="slider-counter--total">{{ products_to_display }}</span>
                    </div>
                    <button
                      type="button"
                      class="slider-button slider-button--next"
                      name="next"
                      aria-label="{{ 'general.slider.next_slide' | t }}"
                      aria-controls="Slider-{{ block.id }}"
                    >
                      {% render 'icon-caret' %}
                    </button>
                  </div>
                {%- endif -%}
              </slider-component>
            {% endif %}


          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

