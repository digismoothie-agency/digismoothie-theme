      class="{{ heading_size }} {{ class }}"
      id="{{ id }}"
      {{ attributes }}
      {% if animation %}
        data-cascade style="--animation-order: {{ animation_order }}"
      {% endif %}
    >
      {{ title }}
    </h6>
{% endcase %}
